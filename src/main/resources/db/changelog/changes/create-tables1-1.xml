<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Таблица site -->
    <changeSet author="developer" id="1">
        <createTable tableName="site">
            <column name="id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="ENUM('INDEXING', 'INDEXED', 'FAILED')">
                <constraints nullable="false"/>
            </column>
            <column name="status_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="last_error" type="TEXT"/>
            <column name="url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Таблица page -->
    <changeSet author="developer" id="2">
        <createTable tableName="page">
            <column name="id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="site_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="path" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="MEDIUMTEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!-- Связь между page и site -->
        <addForeignKeyConstraint
                baseTableName="page"
                baseColumnNames="site_id"
                referencedTableName="site"
                referencedColumnNames="id"
                constraintName="fk_page_site"
                onDelete="CASCADE" />
    </changeSet>

    <!-- Создание индекса для поля path в таблице page -->
    <changeSet author="developer" id="3">
        <createIndex indexName="idx_page_path" tableName="page">
            <column name="path"/>
        </createIndex>
    </changeSet>

    <!-- Таблица lemma -->
    <changeSet author="developer" id="4">
        <createTable tableName="lemma">
            <column name="id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="site_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="lemma" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="frequency" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!-- Связь между lemma и site -->
        <addForeignKeyConstraint
                baseTableName="lemma"
                baseColumnNames="site_id"
                referencedTableName="site"
                referencedColumnNames="id"
                constraintName="fk_lemma_site"
                onDelete="CASCADE" />
    </changeSet>

    <!-- Таблица index -->
    <changeSet author="developer" id="5">
        <createTable tableName="index">
            <column name="id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="page_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="lemma_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="rank" type="FLOAT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!-- Связь между index и page -->
        <addForeignKeyConstraint
                baseTableName="index"
                baseColumnNames="page_id"
                referencedTableName="page"
                referencedColumnNames="id"
                constraintName="fk_index_page"
                onDelete="CASCADE" />
    </changeSet>

</databaseChangeLog>
